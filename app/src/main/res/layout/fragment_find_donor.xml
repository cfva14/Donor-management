<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.FindDonorFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvbloodtype"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginTop="65sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:padding="5sp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Select Blood Type:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/button_blood"
            android:text="A+" />
        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="90sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/button_blood"
            android:text="A-" />
        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="160sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/button_blood"
            android:text="B+" />
        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="230sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/button_blood"
            android:text="B-" />

        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="290sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/button_blood"
            android:text="AB+" />

        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="100sp"
            android:background="@drawable/button_blood"
            android:text="AB-" />
        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="90sp"
            android:layout_marginTop="100sp"
            android:background="@drawable/button_blood"
            android:text="O+" />
        <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginLeft="160sp"
            android:layout_marginTop="100sp"
            android:background="@drawable/button_blood"
            android:text="O-" />


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="656dp"
        android:layout_below="@+id/cvbloodtype"
        android:layout_marginTop="10sp" />


</RelativeLayout>